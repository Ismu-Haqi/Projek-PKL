# ============================================
# GANDARIA - Aplikasi Arsip Digital
# Generasi Arsip Nasional Digital Reformasi Indonesia Anda
# ============================================

# Application Settings
APP_NAME=GANDARIA
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Asia/Jakarta
APP_LOCALE=id

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=gandaria
DB_USERNAME=root
DB_PASSWORD=

# Broadcasting & Cache
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis Configuration
MEMCACHED_HOST=127.0.0.1
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@gandaria.id"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration (Optional)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ============================================
# GANDARIA SPECIFIC CONFIGURATION
# ============================================

# PDF Export Configuration (DomPDF)
DOMPDF_ENABLE_REMOTE=true
DOMPDF_ENABLE_PHP=false
DOMPDF_ENABLE_JAVASCRIPT=true
DOMPDF_ENABLE_HTML5_PARSER=true
DOMPDF_FONT_DIR=storage/fonts
DOMPDF_FONT_CACHE=storage/fonts
DOMPDF_TEMP_DIR=storage/app/temp

# File Upload Configuration
MAX_FILE_SIZE=10240
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Archive Configuration
ARCHIVE_RETENTION_YEARS=10
ARCHIVE_AUTO_DELETE=false

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_EMAIL=true
NOTIFICATION_REALTIME=false

# Report Configuration
REPORT_DEFAULT_PERIOD=monthly
REPORT_CACHE_ENABLED=true
REPORT_CACHE_DURATION=3600

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=storage/backups

# Security Configuration
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Pagination
PAGINATION_PER_PAGE=10
REPORT_PAGINATION_PER_PAGE=20

# API Configuration (Future Use)
API_ENABLED=false
API_RATE_LIMIT=60
API_RATE_LIMIT_PERIOD=1

# Development Tools
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false